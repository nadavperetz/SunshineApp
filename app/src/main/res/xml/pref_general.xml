<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pref_default_location_value"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_location_title"
        android:key="@string/pref_location_key" />
    <ListPreference
        android:title="@string/pref_units_title"
        android:key="@string/pref_units_key"
        android:defaultValue="@string/pref_unit_metric"
        android:entryValues="@array/units"
        android:entries="@array/unitsAlias"/>
</PreferenceScreen>